<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dip"
    android:paddingBottom="20dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dip"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight=".65"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ivCydx"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@drawable/cydx_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_cydx" />
            </LinearLayout>

            <View
                android:id="@+id/special_devider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_middle"
                android:background="@drawable/hintColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/layout_special3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/cydx_bg"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_special_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15分钟"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#466CF7"
                        android:textSize="@dimen/small_middle_text_size" />

                    <TextView
                        android:id="@+id/tv_special_subtitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:text="创业服务圈"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/small_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/divider_height_middle"
                    android:layout_height="match_parent"
                    android:background="@drawable/hintColor" />

                <LinearLayout
                    android:id="@+id/layout_special4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/cydx_bg"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_special_title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="创业"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#466CF7"
                        android:textSize="@dimen/small_middle_text_size" />

                    <TextView
                        android:id="@+id/tv_special_subtitle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:text="服务专家"
                        android:textColor="@color/dark"
                        android:textSize="@dimen/small_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_height_middle"
            android:layout_height="match_parent"
            android:background="@drawable/hintColor" />

        <LinearLayout
            android:id="@+id/ivCyfw"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight=".35"
            android:gravity="center" >

            <ImageView
                style="@style/Fill"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/home_cyfw" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>