    <ImageView
        style="@style/whwrap_style"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="5dip"
        android:src="@drawable/qzt_circle_32" />

    <TextView
        android:id="@+id/item_lab"
        android:layout_width="fill_parent"
