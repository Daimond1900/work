<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableRow android:layout_marginLeft="4dip" >

        <ImageView
            android:id="@+id/companyLogo"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:scaleType="fitXY"
            android:background="@drawable/qzt_edit_text"
            android:src="@drawable/qzt_default_logo"
            android:layout_marginTop="5dip"
            android:padding="2dip"
             >
        </ImageView>

        <TableLayout
            style="@style/whwrap_style"
            android:layout_weight="1" >

            <TableRow android:layout_marginTop="5dip" android:paddingLeft="5dip">

                <TextView
                    android:id="@+id/companyName"
                    style="@style/whwrap_style"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="江苏怡丰通信设备有限公司"
                    android:textColor="#444444"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/gz"
                    style="@style/whwrap_style"
                    android:background="@drawable/qzt_jgz_"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="关 注"
                    android:padding="3dip"
                    android:textColor="#FFFFFF"
                    android:visibility="gone"
                    android:textSize="13sp" />
            </TableRow>
            <TableRow android:paddingLeft="5dip">

                <TextView
                    android:id="@+id/address"
                    style="@style/whwrap_style"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="地址:扬州市广陵产业园元晨路1号"
                    android:textColor="#888888"
                    android:textSize="13sp" />
            </TableRow>
            
            <TableRow android:paddingLeft="5dip">

                <TextView
                    android:id="@+id/tel"
                    style="@style/whwrap_style"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="电话:0514-9889999"
                    android:textColor="#888888"
                    android:textSize="13sp" />
            </TableRow>
        </TableLayout>

        <ImageView
            style="@style/whwrap_style"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dip"
            android:src="@drawable/qzt_right_jt" />
    </TableRow>

</TableLayout>