<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_liner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/top" >

        <Button
            android:id="@+id/back"
            style="@style/top_left_btn" />

        <TextView
            android:id="@+id/top_title"
            style="@style/top_title"
            android:text="政策法规" />
    </RelativeLayout>
<LinearLayout      android:layout_below="@id/top_liner"
    android:id="@+id/top_liner1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@drawable/contact_left_bar"
        android:gravity="center_vertical|center_horizontal"
        android:text="地方法规"
        android:textColor="@color/black"
        android:textSize="12dip" >
    </Button>

    <Button
        android:id="@+id/province"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@drawable/contact_middle_bar1"
        android:gravity="center_vertical|center_horizontal"
        android:text="省级法规"
        android:textColor="@color/black"
        android:textSize="12dip" >
    </Button>

    <Button
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@drawable/contact_right_bar"
        android:gravity="center_vertical|center_horizontal"
        android:text="国家法规"
        android:textColor="@color/black"
        android:textSize="12dip" >
    </Button>

</LinearLayout>
    <com.yifeng.hngly.ui.MyListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       
        android:layout_below="@id/top_liner1"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:divider="#ffffff"
        android:fastScrollEnabled="true"
        android:padding="0dip" />

</RelativeLayout>