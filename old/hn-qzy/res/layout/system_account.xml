<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_title"
        style="@style/ywrap_style"
        android:background="@drawable/top_bg" >

        <Button
            android:id="@+id/backBtn"
            style="@style/top_back_btn" />

        <TextView
            style="@style/ywrap_style"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="帐号管理"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        style="@style/fill_style"
        android:layout_below="@id/top_title"
        android:orientation="vertical" >

        <!-- 主体 -->

        <LinearLayout
            style="@style/ywrap_style"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/common_bg"
            android:orientation="vertical"
            android:padding="15dip" >

            <TableLayout
                style="@style/ywrap_style"
                android:layout_marginTop="5dip"
                android:orientation="vertical"
                android:padding="5dip" >

                <TableRow android:gravity="center_vertical" >

                    <TextView
                        style="@style/login_lab"
                        android:layout_gravity="right"
                        android:text="原始密码：" />

                    <EditText
                        android:id="@+id/old_passwordEdt"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_weight="1"
                        android:background="@drawable/input_bg"
                        android:gravity="center_vertical"
                        android:maxLength="15"
                        android:password="true"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/login_lab"
                        android:layout_gravity="right"
                        android:text="新密码：" />

                    <EditText
                        android:id="@+id/new_passwordEdt"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_weight="1"
                        android:background="@drawable/input_bg"
                        android:gravity="left|center_vertical"
                        android:maxLength="15"
                        android:password="true"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dip"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/jtyq"
                        style="@style/login_lab"
                        android:layout_gravity="right"
                        
                        android:text="确认密码：" />

                    <EditText
                        android:id="@+id/confirm_passwordEdt"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_weight="1"
                        android:maxLength="15"
                        android:password="true"
                        android:background="@drawable/input_bg"
                        android:gravity="center_vertical|left"
                        android:textColor="#000000" />
                </TableRow>

                <TableRow
                     android:gravity="center_vertical" android:layout_marginLeft="25dip">

                    <CheckBox
                        android:id="@+id/checkbox" 
                        android:layout_span="2"
                        android:layout_weight="1"
                        style="@style/MyCheckBox" android:text="自动登录" android:textColor="#222" >
                    </CheckBox>

                </TableRow>

                <Button
                    android:id="@+id/submitBtn"
                    style="@style/common_btns"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:text="提 交"
                    android:textColor="@color/white"
                    android:textSize="16dip" />
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>