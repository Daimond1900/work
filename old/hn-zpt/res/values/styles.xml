<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fill_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="wrap_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fill_wrap_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_fill_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="top_btn_back_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">7dip</item>
        <item name="android:background">@drawable/top_btn_back_bg</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="top_btn_refresh_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">@drawable/top_btn_refresh_bg</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="top_btn_edit_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">@drawable/top_btn_edit_bg</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="top_btn_save_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">@drawable/top_btn_save_bg</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="common_left_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#406D9A</item>
    </style>

    <style name="common_right_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="common_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/alert_dialog_btn</item>
    </style>

    <style name="line_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">#efefef</item>
    </style>

    <style name="position_ViewLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:background">#efefef</item>
    </style>

    <style name="person_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:padding">2dip</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 职位详细样式 -->
    <style name="position_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="position_itemtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#406D9A</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="position_itemtxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="position_tablerow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5sp</item>
        <item name="android:layout_marginLeft">8sp</item>
        <item name="android:layout_marginRight">8sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="network_top_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="login_lab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#383838</item>
    </style>

    <style name="MyCheckBoxYouth" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_checkbox_bg</item>
        <item name="android:layout_width">25dip</item>
        <item name="android:layout_height">25dip</item>
    </style>

    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 模糊 -->
        <!-- <item name="android:windowBackground">@drawable/sys_dialog_bg</item> -->
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    <!-- style name以及它所继承的系统Theme主题 -->
    <style name="Theme.MainActivity" parent="@android:style/Theme.Dialog">

        <!-- 是否允许有标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 提示背景图片 -->
        <!-- <item name="android:windowBackground">@drawable/bg_theme</item> -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 是否允许背景灰暗 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- dialog样式的Activity -->
    <style name="Theme.FloatActivity" parent="android:style/Theme.Dialog">

        <!-- <item name="android:windowBackground">@drawable/bg_car</item> -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- public loading -->
    <style name="publicloadingProgressStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:maxWidth">50.0dip</item>
        <item name="android:maxHeight">50.0dip</item>
        <item name="android:indeterminateDrawable">@anim/publicloading</item>
        <item name="android:minWidth">50.0dip</item>
        <item name="android:minHeight">50.0dip</item>
    </style>

</resources>