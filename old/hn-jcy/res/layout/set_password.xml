<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_liner"
        style="@style/whwrap_style"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/top" >

        <Button
            android:id="@+id/back"
            style="@style/top_left_btn" />

        <TextView
            android:id="@+id/toptitle"
            style="@style/top_title"
            android:text="修改密码" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inputd"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_liner"
        android:layout_centerInParent="true"
        android:layout_margin="5dip" >

        <LinearLayout
            style="@style/whwrap_style"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/whwrap_style"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/login_lab"
                    android:text="旧  密  码: " />

                <EditText
                    android:id="@+id/old_password"
                    style="@style/login_input"
                    android:password="true"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                style="@style/whwrap_style"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/login_lab"
                    android:text="新  密  码: " />

                <EditText
                    android:id="@+id/new_password"
                    style="@style/login_input"
                    android:password="true"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                style="@style/whwrap_style"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    style="@style/login_lab"
                    android:text="确认密码: " />

                <EditText
                    android:id="@+id/affirm_password"
                    style="@style/login_input"
                    android:password="true"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                style="@style/whwrap_style"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:id="@+id/loadtext"
                    style="@style/whwrap_style"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="#ef0000" />
            </LinearLayout>

            <LinearLayout
                style="@style/whwrap_style"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/save_password"
                    style="@style/common_btns"
                    android:layout_height="32dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="保 存"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/reset_password"
                    style="@style/common_btns"
                    android:layout_height="32dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="重 置"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>