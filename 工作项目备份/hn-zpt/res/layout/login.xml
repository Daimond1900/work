<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg" >


        <LinearLayout
            style="@style/fill_style"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                style="@style/wrap_style"
                android:layout_weight="1"
                android:src="@drawable/login_logo_icon" />

            <ImageView
                style="@style/wrap_style"
                android:layout_marginTop="15dip"
                android:layout_weight="1"
                android:src="@drawable/login_text_icon" />

            <LinearLayout
                style="@style/wrap_style"
                android:layout_gravity="center"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="0dip" >

                    <TableRow
                        android:layout_marginTop="5dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="0dip" >

                        <TextView
                            android:id="@+id/user_lab"
                            style="@style/wrap_style"
                            android:text="用户名："
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/user_name"
                            style="@style/wrap_style"
                            android:layout_weight="1"
                            android:background="@drawable/login_input"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dip"
                            android:singleLine="true"
                            android:textColor="#444444" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="20dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="0dip" >

                        <TextView
                            android:id="@+id/paw_lab"
                            style="@style/wrap_style"
                            android:text="密    码："
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/user_pass"
                            style="@style/wrap_style"
                            android:layout_weight="1"
                            android:background="@drawable/login_input"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dip"
                            android:password="true"
                            android:textColor="#444444" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="15dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="3dip" >

                        <TextView style="@style/wrap_style" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <CheckBox
                                android:id="@+id/checkbox"
                                style="@style/MyCheckBoxYouth" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="记住密码"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="15dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical" >

                        <TextView style="@style/wrap_style" />

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" >

                            <Button
                                android:id="@+id/login_btn"
                                style="@style/wrap_style"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:background="@drawable/login_button_bg"
                                android:text="登 录" />

                            <Button
                                android:id="@+id/login_back"
                                style="@style/wrap_style"
                                android:layout_alignParentRight="true"
                                android:layout_weight="1"
                                android:background="@drawable/login_button_bg"
                                android:text="退 出" />
                        </RelativeLayout>
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    style="@style/fill_wrap_style"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/loadtext"
                        style="@style/wrap_style"
                        android:text=""
                        android:textColor="#FF0000"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</RelativeLayout>